@using Microsoft.AspNet.Identity
@using TechnicalService.BLL.Account
<header>

    <!-- *** TOP ***
    _________________________________________________________ -->
    <div id="top">
        <div class="container">
            <div class="row">
                <div class="col-xs-5 contact">
                    <p class="hidden-sm hidden-xs">0538 729 98 10 veya coskunhakan95@gmail.com adresinden bize ulaşın.</p>
                    <p class="hidden-md hidden-lg">
                        <a href="#" data-animate-hover="pulse"><i class="fa fa-phone"></i></a>  <a href="#" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                    </p>
                </div>
                <div class="col-xs-7">
                   @if (User.Identity.GetUserId() != null)
                   {
                    if (HttpContext.Current.User.IsInRole("Operatör"))
                    {
                        <a type="button"  class="btn btn-template-primary" href="@Url.Action("Index", "Operator", new { Area = "Management" })">Operator Ekranı</a>
                    }
                    if (HttpContext.Current.User.IsInRole("Admin"))
                    {
                        <a type="button"  class="btn btn-template-primary" href="@Url.Action("Index", "Admin", new { Area = "Management" })">Admin Ekranı</a>
                    }
                    if (HttpContext.Current.User.IsInRole("Teknisyen"))
                    {
                        <a  type="button" class="btn btn-template-primary"  href="@Url.Action("Index", "Technician", new { Area = "Management" })"> >Teknisyen Ekranı</a>
                        }
                    }
                    @Html.Partial("_PartialLogin")

                </div>
            </div>
        </div>
    </div>

    <!-- *** TOP END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->
