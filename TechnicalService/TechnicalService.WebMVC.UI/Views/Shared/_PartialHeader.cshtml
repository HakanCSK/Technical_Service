                                            </div>
                                            <div class="col-sm-3">
                                                <h5>Hizmetlerimiz</h5>
                                                <ul>
                                                    <li>
                                                        <a href="@Url.Action("Washing", "Home")">Çamaşır Makinesi Servisi </a>
                                                    </li>
                                                    <li>
                                                        <a href="@Url.Action("Dishwasher", "Home")">Bulaşık Makinesi Servisi</a>
