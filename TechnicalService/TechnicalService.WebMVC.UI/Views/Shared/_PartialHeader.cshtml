                </div>
                <!--/.navbar-header -->

                <div class="navbar-collapse collapse" id="navigation">

                    <ul class="nav navbar-nav navbar-right">

                        @if (HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() == "Index")
